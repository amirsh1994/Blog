@using Blog.Core.DTOs.Roles.Queries
@model Blog.Web.Areas.Admin.Models.Users.UpdateUserViewModel

@{
    var roles = ViewBag.AllRoles as List<GetRoleDto>;
}

<div class="row">
    <div class="col-md-12">
        <div class="box box-primary">
            <div class="box-header with-border">
                <h3 class="box-title">ویرایش کاربر</h3>
            </div>
            <form asp-controller="User" asp-action="Update" method="post">
                
                <input type="hidden" asp-for="UserId"/>
                <div class="box-body">
                    <div class="form-group">
                        <label>نام کاربری</label>
                        <input type="text" class="form-control" asp-for="UserName" placeholder="نام کاربری">
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label>نام نام خانوادگی</label>
                        <input type="text" class="form-control" asp-for="FullName" placeholder="نام نام خانوادگی">
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div>
                        <div class="row">
                            <div class="col-lg-4">
                                <button type="button" class="btn btn-success col-lg-6  add-parent" data-name="RoleIds">
                                    انتخاب مجوز دسترسی
                                </button>
                            </div>
                            <select class="form-control col-lg-8" id="ParentList">
                                @foreach (var item in roles ?? [])
                                {
                                    @if (!Model.RoleIds.Contains(item.RoleId))
                                    {
                                        <option value="@item.RoleId">@item.RoleName</option>
                                    }
                                   
                                }
                            </select>
                        </div>

                        <div class="ParentListSelected">
                            @if (Model.RoleIds!=null)
                            {
                                @foreach (var roleId in Model.RoleIds ?? [])
                                {
                                    var roleName = roles?.FirstOrDefault(x => x.RoleId == roleId)?.RoleName ?? "";
                                    <div class="item-Parent">
                                        <button type="button" class="btn-remove item-btn-remove">×</button>
                                        <input type="hidden" name="RoleIds" value="@roleId" />
                                        <span>@roleName</span>
                                    </div>
                                }
                            }
                        </div>
                    </div>
                </div>
                <div class="box-footer">
                    <button type="submit" class="btn btn-primary">ارسال</button>
                </div>
            </form>
        </div>
    </div>
</div>
@section script
{
   <partial name="_multiSelectJsPartial"/>
}
