@model Blog.Web.Models.Users.RegisterUserViewModel


@{
    Layout = null;
    ViewData["Title"] = "ثبت نام";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>@ViewData["Title"]</title>
    @*<link href="~/Auth/css/bootstrap.min.css" rel="stylesheet" />*@
    @*<link href="~/Auth/css/bootstrap.rtl.min.css" rel="stylesheet" />
    <link href="~/Auth/css/bootstrap.rtl.css" rel="stylesheet" />*@
    @*<link href="~/Auth/css/bootstrap.css" rel="stylesheet" />*@
    <link rel="stylesheet" type="text/css" href="/Auth/css/main.css" />
</head>

<body>
    <div class="container">
        <section id="content">
            <form asp-controller="Account" asp-action="Register" method="post">
                <h1>@ViewData["Title"]</h1>
                <div>
                    <input type="text" asp-for="UserName" placeholder="نام کاربری" required="" id="username" />
                    <span asp-validation-for="UserName" style="color: red"></span>
                </div>
                <div>
                    <input type="text" asp-for="UserFullName" placeholder="نام و نام خانوادگی" />
                    <span asp-validation-for="UserFullName" style="color: red"></span>
                </div>
                <div>
                    <input type="password" asp-for="Password" placeholder="کلمه عبور" required="" id="password" />
                    <span asp-validation-for="Password" style="color: red"></span>
                </div>
                <div>
                    <input type="submit" value="ثبت نام" />
                    <a href="/Login">ورود به سایت</a>
                </div>
            </form>
        </section>
    </div>
</body>
<partial name="_jsPartial" />

