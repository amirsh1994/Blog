


@{
    Layout = null;
    ViewData["Title"] = "ثبت نام";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" type="text/css" href="/Auth/css/main.css" />
</head>

<body>
    <div class="container">
        <section id="content">
            <form action="">
                <h1>@ViewData["Title"]</h1>
                <div>
                    <input type="text" placeholder="نام کاربری" required="" id="username" />
                </div>
                <div>
                    <input type="text" placeholder="نام و نام خانوادگی" />
                </div>
                <div>
                    <input type="password" placeholder="کلمه عبور" required="" id="password" />
                </div>
                <div>
                    <input type="submit" value="ثبت نام" />
                    <a href="/Login">ورود به سایت</a>
                </div>
            </form>
        </section>
    </div>
</body>
